<pyven version="1.0.0">
	<project>
		<name>example</name>
		<version>1.2.0</version>
		<step id="build">
			<platform id="windows">
				<tool id="cmake">
					<targets>
						<target>
							<generator>Visual Studio 14 2015</generator>
							<output-path>project/Debug-x86</output-path>
						</target>
					</targets>
				</tool>
				<tool id="msbuild">
					<targets>
						<target>
							<configuration>Debug</configuration>
							<architecture>Win32</architecture>
							<project-file>project/Debug-x86/example.sln</project-file>
							<output-path>build/MSVC-Debug-x86/lib</output-path>
						</target>
					</targets>
				</tool>
			</platform>
			<platform id="linux">
				<tool id="cmake">
					<targets>
						<target>
							<generator>Unix Makefiles</generator>
							<output-path>project/Debug-x86</output-path>
						</target>
					</targets>
				</tool>
				<tool id="make">
					<targets>
						<target>
							<makefile-path>project/Debug-x86</makefile-path>
							<output-path>build/Clang-Debug-x86/lib</output-path>
						</target>
					</targets>
				</tool>
			</platform>
		<step>
		</build>
		<artifacts>
			<artifact id="toto" version="4.3.2" type="exe">
				<platform id="linux">
					<targets>
						<target>
							<path>build/Clang-Debug-x86/bin/toto</path>
							<configuration>Debug</configuration>
							<architecture>x86</architecture>
						</target>
					<targets>
				</platform>
				<platform id="windows">
					<targets>
						<target>
							<path>build/MSVC-Debug-x86/bin/toto.exe</path>
							<configuration>Debug</configuration>
							<architecture>Win32</architecture>
						</target>
					<targets>
				</platform>
			</artifact>
		</artifacts>
		<dependencies>
			<artifact id="titi" version="2.3.4">
				<repository></repository>
			</artifact>
		</dependencies>
	</project>
</pyven>
